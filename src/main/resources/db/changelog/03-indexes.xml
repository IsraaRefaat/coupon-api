<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="3-coupons" author="esraa.refaat">
    <createIndex tableName="coupons" indexName="idx_coupon_code">
        <column name="code"/>
    </createIndex>
    <createIndex tableName="coupons" indexName="idx_coupon_expiry">
        <column name="expiry_date"/>
    </createIndex>
</changeSet>

    <changeSet id="3-coupon_consumptions" author="esraa.refaat">
        <createIndex tableName="coupon_consumptions" indexName="idx_consumption_coupon_id">
            <column name="coupon_id"/>
        </createIndex>

        <createIndex tableName="coupon_consumptions" indexName="idx_consumption_customer_id">
            <column name="customer_id"/>
        </createIndex>

        <createIndex tableName="coupon_consumptions" indexName="idx_consumption_order_id">
            <column name="order_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>